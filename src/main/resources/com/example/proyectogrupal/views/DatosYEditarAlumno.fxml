<BorderPane maxHeight="720.0" maxWidth="1280.0" minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" styleClass="fondoProfesorChiquitito" stylesheets="@../../../../Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectogrupal.controllers.DatosYEditarAlumnoController">
   <top>
      <Label text="Editar a pepito" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="36.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnCancelar" mnemonicParsing="false" styleClass="buttonMenu" stylesheets="@../../../../Style.css" text="CANCELAR" />
            <Button fx:id="btnBorrar" mnemonicParsing="false" styleClass="buttonMenu" stylesheets="@../../../../Style.css" text="BORRAR">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../images/eliminar%20(1).png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="btnActualizar" mnemonicParsing="false" styleClass="buttonMenu" stylesheets="@../../../../Style.css" text="ACTUALIZAR">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../images/guardar-el-archivo.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
