                        <Insets right="40.0" />
                     </GridPane.margin></TextField>
                  <Label text="Nº horas que ha realizado:" textFill="WHITE" GridPane.columnIndex="4">
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                  <Label text="Nº horas pendientes de realizar:" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="1">
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                  <Label text="Observaciones:" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="2">
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                  <TextArea fx:id="txtObservaciones" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="5" GridPane.rowIndex="2">
                     <GridPane.margin>
